{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "outDir": "ext/dist/",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
    },
    "include": [
        "@types/**/*d.ts",
        "ext/src/**/*.ts"
    ]
}